@page "/login"
@layout EmptyLayout
@inject NavigationManager Navigation

<div class="min-h-screen flex w-full bg-slate-50 dark:bg-black font-sans">
    
    <!-- Left Side: Login Form -->
    <div class="w-full md:w-1/2 flex flex-col justify-center p-8 md:p-12 lg:p-20 relative bg-white dark:bg-zinc-950">
        
        <!-- Mobile Background Elements (visible only on small screens) -->
        <div class="absolute inset-0 md:hidden pointer-events-none overflow-hidden">
             <div class="absolute -top-20 -right-20 w-64 h-64 bg-indigo-500/20 rounded-full blur-[80px]"></div>
             <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-emerald-500/20 rounded-full blur-[80px]"></div>
        </div>

        <div class="max-w-md mx-auto w-full relative z-10">
            <!-- Brand -->
            <div class="mb-12">
                <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-indigo-600 text-white shadow-lg shadow-indigo-500/30 mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m8 3 4 8 5-5 5 15H2L8 3z"/>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white mb-2">Bem-vindo de volta</h1>
                <p class="text-slate-500 dark:text-zinc-400">Insira seus dados para acessar o Glass Hub.</p>
            </div>

            <!-- Form -->
            <form class="space-y-6" @onsubmit="HandleLogin">
                <div class="space-y-2">
                    <label for="email" class="text-sm font-bold text-slate-700 dark:text-zinc-300 ml-1">Email</label>
                    <div class="relative group">
                        <input type="email" id="email" 
                            class="w-full px-5 py-4 bg-slate-50 dark:bg-black border border-slate-200 dark:border-zinc-800 rounded-xl focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all placeholder:text-slate-400 dark:placeholder:text-zinc-600 font-medium" 
                            placeholder="seu@email.com" required />
                    </div>
                </div>

                <div class="space-y-2">
                    <div class="flex justify-between items-center px-1">
                        <label for="password" class="text-sm font-bold text-slate-700 dark:text-zinc-300">Senha</label>
                        <a href="#" class="text-xs font-semibold text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors">Esqueceu a senha?</a>
                    </div>
                    <div class="relative group">
                        <input type="password" id="password" 
                            class="w-full px-5 py-4 bg-slate-50 dark:bg-black border border-slate-200 dark:border-zinc-800 rounded-xl focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all placeholder:text-slate-400 dark:placeholder:text-zinc-600 font-medium" 
                            placeholder="••••••••" required />
                    </div>
                </div>

                <button type="submit" 
                    class="w-full py-4 px-6 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-bold text-sm shadow-xl shadow-indigo-500/20 hover:shadow-indigo-500/40 hover:-translate-y-0.5 active:translate-y-0 transition-all duration-300 flex items-center justify-center gap-2 group mt-2">
                    <span>Entrar na Conta</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="M12 5l7 7-7 7"/></svg>
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-sm text-slate-500 dark:text-zinc-500">
                    Ainda não tem conta? 
                    <a href="/register" class="font-bold text-indigo-600 dark:text-indigo-400 hover:underline">Criar agora</a>
                </p>
            </div>
        </div>
        
        <div class="mt-12 text-center md:hidden">
            <p class="text-[10px] uppercase tracking-widest text-slate-400 dark:text-zinc-600 font-bold">&copy; @DateTime.Now.Year Glass Hub</p>
        </div>
    </div>

    <!-- Right Side: Image/Art -->
    <div class="hidden md:flex w-1/2 relative overflow-hidden bg-slate-900">
        <!-- Placeholder Gradient Background (until image is generated) -->
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-slate-900">
            <!-- Fluid shapes simulation -->
            <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-indigo-600/30 rounded-full blur-[120px] animate-pulse"></div>
            <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-emerald-500/20 rounded-full blur-[140px] animate-pulse" style="animation-delay: 2s"></div>
            <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-pink-500/20 rounded-full blur-[100px] animate-pulse" style="animation-delay: 4s"></div>
        </div>
        
        <!-- Glass Overlay Content -->
        <div class="relative z-10 w-full h-full flex flex-col justify-end p-20 bg-gradient-to-t from-black/80 via-transparent to-transparent">
            <div class="max-w-lg mb-10 animate-fade-in-up">
                <div class="inline-block px-3 py-1 mb-4 rounded-full border border-white/20 bg-white/10 backdrop-blur-md text-xs font-bold text-white tracking-wide uppercase">
                    Versão 2.0
                </div>
                <h2 class="text-5xl font-black text-white leading-tight mb-6">
                    Gerencie sua empresa com <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-300">Inteligência</span>.
                </h2>
                <p class="text-lg text-slate-300 leading-relaxed font-light">
                    O Glass Hub oferece as ferramentas mais avançadas para controle financeiro, gestão de fluxo e organização empresarial.
                </p>
            </div>
        </div>

        <!-- Pattern Overlay -->
        <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iMSIgY3k9IjEiIHI9IjEiIGZpbGw9InJnYmEoMjU1LDI1NSwyNTUsMC4wNSkiLz48L3N2Zz4=')] opacity-30"></div>
    </div>
</div>

@code {
    private void HandleLogin()
    {
        Navigation.NavigateTo("/");
    }
}
