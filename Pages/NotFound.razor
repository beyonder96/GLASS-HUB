@page "/404"
@page "/not-found"
@layout EmptyLayout
@inject NavigationManager Navigation

<div class="min-h-screen bg-slate-900 flex items-center justify-center p-6 relative overflow-hidden font-sans">
    <!-- Background Effects -->
    <div class="absolute top-1/4 -left-20 w-96 h-96 bg-indigo-600/20 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-purple-600/20 rounded-full blur-[120px]"></div>

    <div class="max-w-4xl w-full relative z-10">
        <div class="glass-container rounded-[2.5rem] overflow-hidden border border-white/10 shadow-2xl bg-white/5 backdrop-blur-xl">
            <div class="relative aspect-[16/9] w-full">
                <img src="images/404.png" alt="404" class="w-full h-full object-cover" />
                
                <!-- Overlay message if needed, but the image already has text. 
                     We add a slight gradient to make the bottom buttons pop -->
                <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent opacity-60"></div>
                
                <div class="absolute bottom-12 left-0 right-0 px-8 text-center">
                    <button @onclick="GoHome" class="group relative px-8 py-4 bg-white text-slate-950 font-bold rounded-2xl transition-all hover:scale-105 active:scale-95 shadow-xl shadow-black/20">
                        <span class="relative z-10 flex items-center gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                            Voltar para o Início
                        </span>
                    </button>
                </div>
            </div>
        </div>
        
        <p class="mt-8 text-center text-slate-400 font-medium tracking-wide animate-pulse">
            Página não encontrada
        </p>
    </div>
</div>

<style>
    .glass-container {
        animation: slideIn 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes slideIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}