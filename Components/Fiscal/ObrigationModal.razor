@using GlassHub.Models.Fiscal
@using GlassHub.Services.Fiscal
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="fixed inset-0 z-[100] flex items-center justify-center p-4 animate-fade-in">
        <div class="absolute inset-0 bg-black/80 backdrop-blur-md" @onclick="Close"></div>
        <div class="relative w-full max-w-lg bg-white dark:bg-[#09090b] border border-slate-200 dark:border-white/10 rounded-3xl shadow-2xl scale-100 animate-fade-in-up flex flex-col max-h-[90vh]">
            
            <!-- Header -->
            <div class="p-6 border-b border-slate-100 dark:border-white/5 flex justify-between items-center bg-slate-50/50 dark:bg-white/5 rounded-t-3xl">
                <h3 class="font-bold text-xl text-slate-900 dark:text-white">
                    @(Obrigation?.Id != null && !string.IsNullOrEmpty(Obrigation.Name) ? "Editar Obrigação" : "Nova Obrigação")
                </h3>
                <button @onclick="Close" class="p-2 rounded-full hover:bg-slate-200 dark:hover:bg-white/10 text-slate-500 dark:text-zinc-400 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                </button>
            </div>

            <!-- Body -->
            <div class="p-6 space-y-5 overflow-y-auto custom-scrollbar">
                
                <!-- Nome -->
                <div>
                    <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Nome da Obrigação</label>
                    <input @bind="Model.Name" type="text" placeholder="Ex: DAS, DCTFWeb, FGTS" 
                           class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Valor -->
                    <div>
                        <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Valor (R$)</label>
                        <input @bind="Model.Value" type="number" step="0.01"
                               class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                    </div>
                    
                    <!-- Data -->
                    <div>
                        <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Data de Entrega</label>
                        <input @bind="Model.DueDate" type="date"
                               class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Status -->
                    <div>
                        <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Status</label>
                        <select @bind="Model.Status" 
                                class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all appearance-none">
                            <option value="@ObrigationStatus.ToDo">A Fazer</option>
                            <option value="@ObrigationStatus.Doing">Fazendo</option>
                            <option value="@ObrigationStatus.Done">Concluído</option>
                            <option value="@ObrigationStatus.Late">Atrasado</option>
                        </select>
                    </div>

                    <!-- Recorrência -->
                    <div>
                        <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Recorrência</label>
                        <select @bind="Model.Recurrence" 
                                class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all appearance-none">
                            <option value="@RecurrenceType.None">Nenhuma</option>
                            <option value="@RecurrenceType.Daily">Diária</option>
                            <option value="@RecurrenceType.Weekly">Semanal</option>
                            <option value="@RecurrenceType.Fortnightly">Quinzenal</option>
                            <option value="@RecurrenceType.Monthly">Mensal</option>
                            <option value="@RecurrenceType.Semiannual">Semestral</option>
                            <option value="@RecurrenceType.Yearly">Anual</option>
                        </select>
                    </div>
                </div>

                <!-- Observação -->
                <div>
                     <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Observação</label>
                     <textarea @bind="Model.Observation" rows="3" placeholder="Detalhes adicionais..."
                               class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all resize-none"></textarea>
                </div>
                
                <!-- Anexo (Simulado Visualmente) -->
                <div>
                    <label class="block text-xs font-bold text-slate-500 dark:text-zinc-400 uppercase tracking-wider mb-2">Anexo</label>
                    <div class="relative group cursor-pointer border-2 border-dashed border-slate-200 dark:border-zinc-800 hover:border-indigo-500 dark:hover:border-indigo-500 rounded-xl p-6 transition-all bg-slate-50 dark:bg-zinc-900/50 text-center">
                        <InputFile OnChange="HandleFileSelected" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" />
                         <div class="flex flex-col items-center gap-2">
                             <div class="w-10 h-10 rounded-full bg-indigo-50 dark:bg-indigo-500/10 flex items-center justify-center text-indigo-500">
                                 <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" x2="12" y1="3" y2="15"/></svg>
                             </div>
                             @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                             {
                                 <span class="text-sm font-medium text-emerald-500">Arquivo Selecionado</span>
                                 <span class="text-xs text-slate-500 dark:text-zinc-500">@Model.AttachmentPath</span>
                             }
                             else
                             {
                                 <span class="text-sm font-medium text-slate-600 dark:text-zinc-400">Clique para anexar arquivo</span>
                                 <span class="text-xs text-slate-400 dark:text-zinc-600">PDF, Imagens ou Documentos</span>
                             }
                        </div>
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <div class="p-6 border-t border-slate-100 dark:border-white/5 flex justify-end gap-3 bg-slate-50/50 dark:bg-white/5 rounded-b-3xl">
                <button @onclick="Close" class="px-6 py-2.5 rounded-xl border border-slate-200 dark:border-zinc-700 font-bold text-slate-700 dark:text-zinc-300 hover:bg-slate-100 dark:hover:bg-zinc-800 transition-colors">
                    Cancelar
                </button>
                <button @onclick="Save" class="px-6 py-2.5 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-bold transition-colors shadow-lg shadow-indigo-500/20">
                    Salvar Obrigação
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public TaxObrigation? Obrigation { get; set; }
    [Parameter] public EventCallback<TaxObrigation> OnSave { get; set; }

    private TaxObrigation Model { get; set; } = new();

    protected override void OnParametersSet()
    {
        if (Obrigation != null)
        {
             // Clone simple properties to avoid editing reference directly before save
             Model = new TaxObrigation
             {
                 Id = Obrigation.Id,
                 Name = Obrigation.Name,
                 Value = Obrigation.Value,
                 DueDate = Obrigation.DueDate,
                 Status = Obrigation.Status,
                 Recurrence = Obrigation.Recurrence,
                 Description = Obrigation.Description,
                 Observation = Obrigation.Observation,
                 AttachmentPath = Obrigation.AttachmentPath
             };
        }
        else if (!IsVisible) // Reset when closing or opening new
        {
             Model = new TaxObrigation 
             { 
                 DueDate = DateTime.Today,
                 Status = ObrigationStatus.ToDo
             };
        }
    }

    private void Close()
    {
        IsVisible = false;
        IsVisibleChanged.InvokeAsync(false);
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(Model.Name)) return; // Basic validation
        
        await OnSave.InvokeAsync(Model);
        Close();
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        // Simulate upload by just taking the name for now
        // In real apps, upload to server/blob storage here
        var file = e.File;
        if (file != null)
        {
            Model.AttachmentPath = file.Name;
        }
    }
}
